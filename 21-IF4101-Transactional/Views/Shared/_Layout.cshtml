    <!-- REGISTER STUDENT -->
    <section id="about" class="displayNoUser">
        <div class="container">
            <div class="row">

                <div class="col-md-6 col-sm-12">
                    <div class="about-info">
                        <h2>Join the Business Informatics community</h2>
                        <figure>
                            <span><i class="fa fa-newspaper-o"></i></span>
                            <figcaption>
                                <h3>Know news</h3>
                                <p>Know and comment news of Business Informatics.</p>
                            </figcaption>
                        </figure>

                        <figure>
                            <span><i class="fa fa-question"></i></span>
                            <figcaption>
                                <h3>Queries to comunnity</h3>
                                <p>Ask and answer questions to community students.</p>
                            </figcaption>
                        </figure>

                        <figure>
                            <span><i class="fa fa-calendar"></i></span>
                            <figcaption>
                                <h3>Request appointment</h3>
                                <p>Solicit your appointment with a community professor.</p>
                            </figcaption>
                        </figure>

                    </div>
                </div>

                <div class="col-md-4 col-sm-12">
                    <div class="entry-form">
                        <form id="registerStudentForm" autocomplete="off">
                            <h2>Join community</h2>
                            <input type="text" name="firstName" id="firstName" class="form-control" placeholder="First name" required="" minlength="3" maxlength="50" pattern="[A-Za-z áéíóúñÑ]+">

                            <input type="text" name="lastName" id="lastName" class="form-control" placeholder="Last name" required="" minlength="10" maxlength="100" pattern="[A-Za-záéíóúñÑ](?=.* ).{1,}[A-Za-záéíóúñÑ]+">

                            <input type="text" name="studentId" id="studentId" class="form-control" placeholder="Student id" required="" minlength="6" maxlength="6" pattern="(?=.*[A-Z]).{1}[0-9]+" title="Valid student id">

                            <input type="email" name="email" id="email" class="form-control" placeholder="Institutional email address" required="" pattern="[\w.%+-]+@@ucr\.ac\.cr" title="@@ucr.ac.cr">

                            <input type="password" name="password" id="password" class="form-control password" placeholder="Password" required="" minlength="8" maxlength="8" pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*[!.#$%^&*_=+-]).{8,8}$" title="At least 1 Uppercase, At least 1 Lowercase, At least 1 Number, At least 1 Symbol (!.#$%^&*_=+-)">
                            <span id="showPasswordSudent"><i class="fa fa-eye" id="iconPasswordStudent"></i></span>

                            <button type="submit" class="submit-btn form-control">Sign in</button>

                            <div id="alertMessageAddStudent"></div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </section>

